<div id="measurement-chart-@(Model.Patient.ID)" class="printable modal fade measurement-chart-modal" data-id="@(Model.Patient.ID)">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="modal-title">Weight Chart for @(Model.Patient.FullName)  Identifier: @(Model.Patient.RM2Number) </h3>
            </div>
            <div class="modal-body">
                <canvas id="measurement-chart-canvas" width="800" height="400"></canvas>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="window.print();"><i class="fa fa-print"></i>&nbsp; Print</button>
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="$('div.modal-backdrop.in').remove()"><i class="fa fa-close"></i>&nbsp; Close Chart</button>
            </div>
        </div>
    </div>
</div>
