@model AspergillosisEPR.Models.PatientRadiologyFinding
@using HtmlHelpers.BeginCollectionItemCore;
@using (Html.BeginCollectionItem("PatientRadiologyFinding"))
{
    <fieldset>
        <div class="row">
            <section class="col col-4">
                <label class="select">
                    <label asp-for="RadiologyTypeId" class="select">
                        @Html.DropDownListFor(m => m.RadiologyTypeId, (SelectList)ViewBag.RadiologyTypeId, "Select Rad Type")
                        <i></i>
                        <span asp-validation-for="RadiologyTypeId" class="text-danger"></span>
                    </label>
                </label>
            </section>
            <section class="col col-4">
                <label class="input" asp-for="DateTaken">
                    <input asp-for="DateTaken" placeholder="Date Taken" class="datepicker" type="text">
                </label>
            </section>
            <section class="col col-4">
                <label class="select">
                    <label asp-for="FindingId" class="select">
                        @Html.DropDownListFor(m => m.FindingId, (SelectList)ViewBag.FindingId, "Select Finding")
                        <i></i>
                        <span asp-validation-for="FindingId" class="text-danger"></span>
                    </label>
                </label>
            </section>            
        </div>
        <div class="row">
            <section class="col col-4">
                <label class="select">
                    <label asp-for="ChestLocationId" class="select">
                        @Html.DropDownListFor(m => m.ChestLocationId, (SelectList)ViewBag.ChestLocationId, "Select Location")
                        <i></i>
                        <span asp-validation-for="ChestLocationId" class="text-danger"></span>
                    </label>
                </label>
            </section>
            <section class="col col-4">
                <label class="select">
                    <label asp-for="ChestDistributionId" class="select">
                        @Html.DropDownListFor(m => m.ChestDistributionId, (SelectList)ViewBag.ChestDistributionId, "Select Distribution")
                        <i></i>
                        <span asp-validation-for="ChestDistributionId" class="text-danger"></span>
                    </label>
                </label>
            </section>
            <section class="col col-4">
                <label class="select">
                    <label asp-for="GradeId" class="select">
                        @Html.DropDownListFor(m => m.GradeId, (SelectList)ViewBag.GradeId, "Select Grade")
                        <i></i>
                        <span asp-validation-for="GradeId" class="text-danger"></span>
                    </label>
                </label>
            </section>
            </div>
            <div class="row">
            <section class="col col-4">
                <label class="select">
                    <label asp-for="TreatmentResponseId" class="select">
                        @Html.DropDownListFor(m => m.TreatmentResponseId, (SelectList)ViewBag.TreatmentResponseId, "Select Response")
                        <i></i>
                        <span asp-validation-for="TreatmentResponseId" class="text-danger"></span>
                    </label>
                </label>
            </section>
            <section class="col col-8">
                <label class="textarea">
                    <i class="icon-append fa fa-comment"></i>
                    @Html.TextAreaFor(m => m.Note, new { @class = "comment", @rows = 2, @placeholder = "Note" })
                </label>
            </section>
        </div> 
            <div class="row">
                <a href="javascript:void(0)" class="btn btn-danger remove-new-ig pull-right btn-lg" data-what="patients radiology entry" data-toggle="tooltip" data-title="Remove this item?" style="padding: 5px">
                    <i class="fa fa-trash"></i>
                </a>
            </div>
</fieldset>
}