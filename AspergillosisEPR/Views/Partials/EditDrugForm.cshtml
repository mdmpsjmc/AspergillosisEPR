@model AspergillosisEPR.Models.Patients.PatientDrug;
<div class="drug-row">
    <fieldset>
        <div class="row">
            <label class="select">
                <label asp-for="DrugId" class="select">
                    @Html.DropDownList("Drugs[" + (string)ViewBag.Index + "].DrugId", (SelectList)ViewBag.DrugId, "Select Drug")
                    <i></i>
                    <span asp-validation-for="DrugId" class="text-danger"></span>
                </label>
            </label>
        </div>
    </fieldset>
    <section class="col col-6">
        <label asp-for="StartDate" class="input">
            <i class="icon-append fa fa-calendar"></i>
            <input asp-for="StartDate" id="Drugs_@((string)ViewBag.Index)__StartDate" name="Drugs[@((string)ViewBag.Index)].StartDate" placeholder="Start Date" class="datepicker" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </label>
    </section>
    <section class="col col-6">
        <label asp-for="EndDate" class="input">
            <i class="icon-append fa fa-calendar"></i>
            <input asp-for="EndDate" id="Drugs_@((string)ViewBag.Index)__EndDate" name="Drugs[@((string)ViewBag.Index)].EndDate" placeholder="End Date" class="datepicker"/>
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </label>
    </section>
    <div class="row">
        <label class="select side-effects">
            <label asp-for="SideEffects" class="select">
                <p>Please select drug side effects from the list (if applicable)</p>
                @Html.DropDownList("Drugs[" + (string)ViewBag.Index + "].SideEffects", (MultiSelectList)ViewBag.SideEffects, new { multiple = "multiple", @class = "select2", @data_placeholder = "Type side effect name to start search" })
                <span asp-validation-for="SideEffects" class="text-danger"></span>
            </label>
        </label>
    </div>
</div>