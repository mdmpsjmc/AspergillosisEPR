@using HtmlHelpers.BeginCollectionItemCore;
@model AspergillosisEPR.Models.Patients.PatientDrugLevel;
@using AspergillosisEPR.Models.Patients;
@using (Html.BeginCollectionItem("DrugLevels"))
{
    <div class="drug-level-form">
        <fieldset>
            <div class="row">
                <label class="select">
                    <label asp-for="DrugId" class="select">
                        @Html.DropDownListFor(m => m.DrugId, (SelectList)ViewBag.DrugId, "Select Drug")
                        <i></i>
                        <span asp-validation-for="DrugId" class="text-danger"></span>
                    </label>
                </label>
            </div>
        </fieldset>
        <section class="col col-6">
            <label asp-for="DateReceived" class="input">
                <i class="icon-append fa fa-calendar"></i>
                <input asp-for="DateReceived" placeholder="Date Received" class="datepicker" type="text">
            </label>
        </section>
        <section class="col col-6">
            <label asp-for="DateTaken" class="input">
                <i class="icon-append fa fa-calendar"></i>
                <input asp-for="DateTaken" placeholder="Date Taken" class="datepicker" type="text">
            </label>
        </section>
        <div class="row">
            <section class="col col-2">
                <label asp-for="ComparisionCharacter" class="select">
                    @Html.DropDownListFor(m => m.ComparisionCharacter, new SelectList(PatientDrugLevel.ComparisionCharacters()), "none")
                    <i></i>
                    <span asp-validation-for="ComparisionCharacter" class="text-danger"></span>
                </label>
            </section>
            <section class="col col-6">
                    <label asp-for="ResultValue" class="input">
                        <i class="icon-append fa fa-flask"></i>
                        <input asp-for="ResultValue" placeholder="Result" type="text">
                    </label>
            </section>
            <section class="col col-2">
                <label asp-for="UnitOfMeasurementId" class="select">
                    @Html.DropDownListFor(m => m.UnitOfMeasurementId, (SelectList)ViewBag.UnitId, "Unit");
                    <i></i>
                    <span asp-validation-for="UnitOfMeasurementId" class="text-danger"></span>
                </label>
            </section>
        </div>
        <div class="row">
            <a href="javascript:void(0)" class="btn btn-danger remove-new-drug pull-right btn-lg" data-what="drug level" data-toggle="tooltip" data-title="Remove drug" style="padding: 5px">
                <i class="fa fa-trash"></i>
            </a>
        </div>
    </div>
}