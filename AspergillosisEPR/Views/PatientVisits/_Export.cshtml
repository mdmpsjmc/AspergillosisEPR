<div id="patient-visit-export-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Export Visits</h4>
            </div>
            <div class="modal-body">
                <form class="smart-form">
                    <div class="inline-group">
                        <label class="checkbox">
                            <input type="checkbox" name="IncludeCharts" id="IncludeCharts" />
                            <i></i>
                            <span class="checkbox-label">Include Charts? </span>
                        </label>
                        <label class="checkbox">
                            <input type="checkbox" name="IncludeOtherVisits" id="IncludeOtherVisits" />
                            <i></i>
                            <span class="checkbox-label">Include All Visits? </span>
                        </label>
                    </div>                    
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="export-patient-visit"><i class="fa fa-download"></i>&nbsp; Export</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>